<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="styles.css">
  <link rel="shortcut icon" href="/icons/hive-svgrepo-com.svg" type="image/svg+xml">
  <title>Sign Up</title>
</head>

<body>
  <main class="form">
    <section class="signup-page">
      <div class="form-container">
        <p class="title">Join Hive</p>
        <form class="form" action="/sign-up" method="POST">
          <div class="input-group">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" placeholder="" value="<%= typeof formData !== 'undefined' ? formData.firstName: ''%>" required />
          </div>
          <div class="input-group">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" placeholder="" value="<%= typeof formData !== 'undefined' ? formData.lastName: ''%>" />
          </div>
          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="" value="<%= typeof formData !== 'undefined' ? formData.email: ''%>" required />
          </div>
          <div class="input-group">
            <label for="password">Password</label>
            <span class="pwd-reminder">*Use at least 6 characters with uppercase & lowercase letters, numbers, and symbols.</span>
            <input type="password" name="password" id="password" />
          </div>
          <div class="input-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" required />
          </div>
          <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="errors">
            <% errors.forEach(function(error) { %>
            <p class="error"><%= error.msg %></p>
            <% }) %>
          </div>
          <% } %>
          <button class="sign" type="submit">Sign Up</button>
          <a href="/" class="back-btn">Go back</a>
        </form>
      </div>
    </section>
  </main>
  <footer>
    <a href="https://github.com/frrst-ian/hive" target="_blank" rel="noopener noreferrer">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github">
        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
        <path d="M9 18c-4.51 2-5-2-7-2" />
      </svg>
    </a>
    </div>
  </footer>
</body>

</html>